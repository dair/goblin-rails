<% if (not @error) %>
	<% if @project["key"] == 0 %>
		<%= link_to 'Вернуться к списку проектов', :controller => "science", :action => "main" %>
	<% else %>
		<%= link_to 'Вернуться к информации о проекте', :controller => "science", :action => "project_info", :key => @project["key"] %>
	<% end %>
	<%= form_tag(:action => "asset_return_write") do %>
	<%= hidden_field_tag 'key', @project["key"] %>  
	    <table cellpadding="5" style="width: 100%; border-collapse: collapse; display: table;" class=" htmtableborders"> 
	      <tbody>
	        <tr>
	          <td style="text-align: right; vertical-align: top;">Средств на счету проекта:</td> 
	          <td style="text-align: left; vertical-align: top;"><%= @project["money"] %></td> 
	        </tr> 
	        <tr>
	          <td style="text-align: right; vertical-align: top;">Сумма для перевода:</td> 
	          <td style="text-align: left; vertical-align: top;"><%= text_field_tag("amount", @project["money"], :size => 120) %></td> 
	        </tr> 
	        <tr>
	          <td style="text-align: right; vertical-align: top;">Номер счёта для перевода:</td> 
	          <td style="text-align: left; vertical-align: top;"><%= text_field_tag("account", "", :size => 120) %></td> 
	        </tr> 
	        <tr> 
	          <td>&nbsp;</td>
	          <td><%= submit_tag("Перевести", :confirm => "Перевести средства?") %></td> 
	        </tr>
	      </tbody> 
	    </table> 
	<% end %>
<% else %>
	<font size=+2 color=red>Проект не найден</font>
<% end %>
